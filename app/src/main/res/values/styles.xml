<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="TextAppearance.Question" parent="TextAppearance.AppCompat.Menu">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="CardView.Base" parent="CardView">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="cardElevation">5dp</item>
        <item name="cardCornerRadius">2dp</item>
        <item name="cardPreventCornerOverlap">true</item>
        <item name="cardBackgroundColor">@color/cardview_light_background</item>
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:layout_marginBottom">5dp</item>
    </style>

    <style name="TextAppearance.AddRadiation" parent="TextAppearance.AppCompat">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@android:color/holo_red_light</item>
    </style>

    <style name="TextAppearance.Convertor.Value" parent="TextAppearance.AppCompat.Large">
        <item name="android:textColor">@android:color/darker_gray</item>
        <item name="android:gravity">end</item>
        <item name="android:textSize">30sp</item>
    </style>

    <style name="TextAppearance.Convertor.Unit" parent="TextAppearance.AppCompat.Large">
        <item name="android:textSize">22sp</item>
        <item name="android:gravity">bottom</item>
    </style>
</resources>
